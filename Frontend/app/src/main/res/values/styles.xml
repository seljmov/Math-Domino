<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ProfileCard">
        <item name="android:background">@color/customWhite</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="cardBackgroundColor">@color/newSecondColor</item>
        <item name="android:textColorHint">@color/newGrayColor</item>
        <item name="android:textColor">@color/newWhiteColor</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="AppTheme.CustomHeader">
        <item name="android:background">@null</item>
        <item name="cardBackgroundColor">@color/newSecondColor</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/customWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Background">
        <item name="cardBackgroundColor">@color/lightBlack</item>
    </style>

    <style name="AppTheme.Background.TimerPanel">
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/mini_darkBlack</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="AppTheme.Background.UpperInfo">
        <item name="cardElevation">10dp</item>
        <item name="android:background">@color/lighter_light_black</item>
        <item name="android:textSize">40sp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
