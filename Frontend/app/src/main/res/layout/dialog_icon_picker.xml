<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/darkBlack"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите аватарку"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/customWhite"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:stateListAnimator="@null"
        android:layout_marginBottom="15dp"
        android:background="@color/customWhite"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvIcon_2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_1"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cvIcon_1"
            app:layout_constraintEnd_toStartOf="@id/cvIcon_3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cvIcon_2"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_3"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvIcon_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_4"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon_2"
            app:layout_constraintStart_toEndOf="@id/cvIcon_4"
            app:layout_constraintEnd_toStartOf="@id/cvIcon_6">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_5"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon_3"
            app:layout_constraintStart_toEndOf="@id/cvIcon_5"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_6"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvIcon_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_7"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon_5"
            app:layout_constraintStart_toEndOf="@id/cvIcon_7"
            app:layout_constraintEnd_toStartOf="@id/cvIcon_9">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_8"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon_9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:contentPadding="2dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/newWhiteColor"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon_6"
            app:layout_constraintStart_toEndOf="@id/cvIcon_8"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_icon_9"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDismiss_full"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/lightBlack"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Закрыть"
                    android:textSize="16sp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/customWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDismiss_mini"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/lightBlack"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cvConfirm">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Закрыть"
                    android:textSize="16sp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/customWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvConfirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/newPrimaryColor"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cvDismiss_mini"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выбрать"
                    android:textSize="16sp"
                    android:textStyle="italic|bold"
                    android:textColor="@color/customWhite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>